<div class="row row-cols-1 row-cols-md-3">
    {{#each restaurants}}
    <div class="col mb-4">
        <div class="container-sm">
            <div class="card h-100">
                <img src="{{this.imageURL}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.type}}</p>
                </div>
            </div>
        </div>
    </div>
        {{/each}}
    </div>